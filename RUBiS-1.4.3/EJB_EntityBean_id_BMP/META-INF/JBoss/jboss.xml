      </resource-ref>
    </entity>

    <session>
      <ejb-name>Query</ejb-name>
      <jndi-name>QueryHome</jndi-name>
      <resource-ref>
        <res-ref-name>jdbc/rubis</res-ref-name>
        <resource-name>rubis</resource-name>
      </resource-ref>
    </session>

  </enterprise-beans>


  <resource-managers>

    <resource-manager>
      <res-name>rubis</res-name>
      <res-jndi-name>java:/rubis</res-jndi-name>
    </resource-manager>

  </resource-managers>

